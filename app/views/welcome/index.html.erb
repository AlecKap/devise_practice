
<% if user_signed_in? %>
  <h1> Welcome to the Devise Login Application!</h1> 
  <h2>You are currently signed in with the email: <%= current_user.email %></h2>
  <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <h1>Welcome to the Devise Login Application! please Sign in or Sign Up Below</h1>
  <%= link_to "Sign up", new_user_registration_path %> or
  <%= link_to "Sign in", new_user_session_path %>
<% end %>

